# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Database
DATABASE_PATH=bot.db

# NLP Configuration
NLP_LANGUAGE=it
NLP_MIN_CONFIDENCE=0.6

# Bot Behavior
BOT_PREFIX=!
BOT_STATUS=online
BOT_ACTIVITY=Ascoltando i server

# Logging
LOG_LEVEL=info
LOG_FILE=bot.log

# Privacy & GDPR
DATA_RETENTION_DAYS=90
AUDIT_ENABLED=true

# Job Scheduling
STATS_CRON=0 0 * * *
CLEANUP_CRON=0 3 * * 0
